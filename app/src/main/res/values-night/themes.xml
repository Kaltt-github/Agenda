<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Agenda" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/nightThemeColorPrimary</item>
        <item name="colorPrimaryVariant">@color/nightThemeColorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/nightThemeColorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/nightThemeColorSecondary</item>
        <item name="colorSecondaryVariant">@color/nightThemeColorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/nightThemeColorOnSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/nightThemeColorSurface</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/nightThemeColorBackground</item>
        <item name="materialButtonStyle">@style/defaultButton</item>
        <item name="colorOnPrimarySurface">@color/nightThemeColorSurfaceVariant</item>
    </style>
    <style name="defaultButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/nightThemeColorPrimaryContainer</item>
        <item name="android:textColor">@color/nightThemeColorOnPrimaryContainer</item>
    </style>
    <style name="cardPrimaryBackground">
        <item name="cardBackgroundColor">@color/nightThemeColorPrimaryContainer</item>
    </style>
    <style name="surfaceBackground">
        <item name="backgroundTint">@color/nightThemeColorSurfaceVariant</item>
    </style>
</resources>